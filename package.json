{
  "name": "learn-javascript-with-ai",
  "version": "1.0.0",
  "description": "Learning JavaScript with AI tools and automation",
  "private": true,
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:a11y": "playwright test tests/accessibility",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "perf:lighthouse": "lhci autorun",
    "build": "tsc --noEmit && webpack --mode production",
    "build:check": "tsc --noEmit",
    "build:size": "webpack --mode production --json > webpack-stats.json && node scripts/check-bundle-size.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.57.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.29",
    "axe-playwright": "^2.2.2",
    "babel-loader": "^9.2.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^5.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js",
      "**/*.spec.js"
    ]
  },
  "keywords": [
    "javascript",
    "learning",
    "ai",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}
